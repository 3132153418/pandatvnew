<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_selected="true">
        <layer-list>
            <item>
                <shape>
                    <stroke android:width="1.0dip" android:color="#13db48" android:dashWidth="4.0dip" android:dashGap="2.0dip" />
                    <corners android:radius="20dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_selected="true">
        <shape>
            <stroke android:width="1.0dip" android:color="#24d040" />
            <corners android:radius="20dp"/>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <stroke android:width="0.5dip" android:color="#b8b4b4" />
            <corners android:radius="20dp"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <stroke android:width="0.5dip" android:color="#12db30" />
            <solid android:color="#fff9f9f9" />
            <corners android:radius="20dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <stroke android:width="0.5dip" android:color="#b8b2b2" />
            <corners android:radius="20dp"/>
        </shape>
    </item>
</selector>