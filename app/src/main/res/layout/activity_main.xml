<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jiyun.pandatv.MainActivity">

    <FrameLayout
        android:id="@+id/framelayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"></FrameLayout>
    <View
        android:background="#A5A5A5"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>
    <RadioGroup
        android:id="@+id/rg_group"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selecter_home_back"
            android:button="@null"
            android:paddingTop="6dp"
            android:drawablePadding="-10dp"
            android:drawableTop="@drawable/selector_home"
            android:gravity="center"
            android:text="首页" />

        <RadioButton
            android:paddingTop="6dp"
            android:id="@+id/rb_live"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_background"
            android:button="@null"
            android:drawablePadding="-10dp"
            android:drawableTop="@drawable/selector_live"
            android:gravity="center"
            android:text="熊猫直播" />

        <RadioButton
            android:paddingTop="6dp"
            android:id="@+id/rb_china"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_background"
            android:button="@null"
            android:drawablePadding="-10dp"
            android:drawableTop="@drawable/selector_china"
            android:gravity="center"
            android:text="滚滚视频" />

        <RadioButton
            android:paddingTop="6dp"
            android:id="@+id/rb_paper"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_background"
            android:button="@null"
            android:drawablePadding="-10dp"
            android:drawableTop="@drawable/selector_paper"
            android:gravity="center"
            android:text="熊猫播报" />

        <RadioButton
            android:paddingTop="6dp"
            android:id="@+id/rb_live_china"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_background"
            android:button="@null"
            android:drawablePadding="-10dp"
            android:drawableTop="@drawable/selector_live_china"
            android:gravity="center"
            android:text="直播中国" />
    </RadioGroup>


</LinearLayout>
