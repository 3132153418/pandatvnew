<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="只支持手机号注册用户找回密码"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:textColor="@color/colorPrimary"/>
    <EditText
        android:id="@+id/pwd_Edit"
        android:layout_width="370dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:textSize="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:background="#fff"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/phone_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:visibility="gone"
        android:layout_marginLeft="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:id="@+id/pwd_image_Edit"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="5dp"
                android:background="#fff"
                android:layout_marginTop="20dp"/>
            <TextView
                android:id="@+id/yanzheng_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:visibility="gone"
                android:layout_marginLeft="15dp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/pwd_ImageView"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/pwd_yanzhengma_Edit"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:textSize="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:background="#fff"
            android:layout_marginTop="15dp"/>

        <Button
            android:id="@+id/pwd_yanzhengma_Btn"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="获取验证码"
            android:background="@color/colorPrimary"
            android:textColor="#fff"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>

    <EditText
        android:id="@+id/pwd_pwd_Edit"
        android:layout_width="370dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:textSize="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:background="#fff"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/find_pwd_Button"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:text="找回密码"
        android:textColor="#fff"
        android:background="#303F9F"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"/>
</LinearLayout>
