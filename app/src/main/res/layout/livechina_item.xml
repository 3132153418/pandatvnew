<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                             android:orientation="vertical"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <ImageView
            android:layout_width="385dp"
            android:layout_height="200dp"
            android:id="@+id/livaching_image"
            android:scaleType="fitXY"
            android:src="@drawable/_no_net"/>
        <ImageView
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/home_play_icon"/>
</RelativeLayout>


<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/livechina_text"
    android:text="哈哈"
    android:textColor="#000"
    android:textSize="15sp"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

        <TextView
            android:id="@+id/videobianwu"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="简介"
            />

        <CheckBox
            android:id="@+id/haha_xianshi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/selector_live_xiala2"
            android:button="@null">
        </CheckBox>
</LinearLayout>
<!--<LinearLayout-->
    <!--android:layout_width="385dp"-->
    <!--android:layout_height="5dp"-->
    <!--android:background="#cfd4ed"></LinearLayout>-->
<TextView
    android:id="@+id/ewew"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:visibility="visible"
    android:textColor="#000"/>
</LinearLayout>