<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/paper_data_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:src="@drawable/home_play_icon"/>

            <ImageView
                android:id="@+id/paper_data_image"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:src="@mipmap/ic_launcher"
                />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/impandabroadcast_r_itema_tv1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:text="465465432132136"
                    android:textColor="#000"
                    android:textSize="15sp"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/paper_data_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="123132132132"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>