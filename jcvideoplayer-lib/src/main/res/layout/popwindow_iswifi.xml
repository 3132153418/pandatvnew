<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_otherTip"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_gravity="center"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:background="@drawable/pe_dialog_tips_view_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center_horizontal"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:text="@string/player_tip1"
        android:textColor="#000000"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/hline_height"
        android:background="@color/tab_top_line_color"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/pe_dialog_tips_view_bg"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/pe_dialog_tips_view_bg"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/watch_cancel"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/ll_tips_line"
            android:layout_width="@dimen/hline_height"
            android:layout_height="fill_parent"
            android:background="@color/tab_top_line_color"
            android:orientation="horizontal"></LinearLayout>

        <TextView
            android:id="@+id/btn_ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/pe_dialog_tips_view_bg"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/watch_continue"
            android:textColor="@color/crimson"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>
